<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body class="bg">

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Blog</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/author">Profile</a></li>
          <li><a href="/post/new">Create post</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>

    <% if (posts) {%>
      <% for (var i = 0; i < posts.length; i++) {%>
        <div class="container-fluid text-center">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title"><%=posts[i].title%></h2>
              <p class="card-subtitle"><%=posts[i].description%></p>
              <a href="/post/<%=posts[i].id%>" class="btn btn-primary">Read More</a>
            </div>
            <div class="text-muted">
              Posted on <%=posts[i].createdAt%> by
              <a href="/author/<%=posts[0].userId%>"><%=posts[i].user.username%></a>
            </div>
          </div>
        </div>
      </br>
      <%}%>
    <%}%>
    <div class="wrapper">
        <div class="footer">
          <ul class="pagination ">
            <% if (page > 1) {%>
              <li><a href="/page/<%=page-1%>"> < </a></li>
            <%}%>
            <li class="active"><a href="#"> <%=page%> </a></li>
            <% if (ifMoreThanOneThanForward > 1) {%>
              <li><a href="/page/<%=page+1%>"> > </a></li>
            <%}%>
          </ul>
        </div>
    </div>
  </body>
</html>
